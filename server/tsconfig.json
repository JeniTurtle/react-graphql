{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "../dist/server",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        // "allowUnreachableCode": true,
        // "checkJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        // Annotated for keeping webpackChunkName
        "removeComments": false,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["es2015", "es2017.object"],
        "types": [
            "cookie",
            "cookie-parser",
            "express",
            "next",
            "lru-cache",
            "node",
            "qs"
        ]
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "atom": {
        "rewriteTsconfig": false
    }
}
